name: Deploy to develop
on:
  push:
    branches:
      - develop
jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Setup Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'

    - name: Install dependencies
      run: npm install

    - name: Build
      run: npm run build

    - name: Execute before deploy script
      run: ./iac/before_deploy.sh

    - name: Deploy to dev
      run: bash ./iac/deploy.sh /domains/dev.hacknarok.pl
